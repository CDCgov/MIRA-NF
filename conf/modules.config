/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {


    withName: CONCATFASTQS {
        publishDir = [
            path: { "${params.runpath}/fastq_pass/cat_fastqs" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: SAMPLESHEET_CHECK {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: FASTQC {
        ext.args = '--quiet'
    }

    withName: 'MULTIQC' {
        ext.args   = { params.multiqc_title ? "--title \"$params.multiqc_title\"" : '' }
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/multiqc" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'NEXTFLOWSAMPLESHEETI' {
        ext.args = '--quiet'
    }

    withName: 'NEXTFLOWSAMPLESHEETO' {
        ext.args = '--quiet'
    }

    withName: 'FINDCHEMISTRYI' {
        ext.args = '--quiet'
    }

    withName: 'FINDCHEMISTRYO' {
        ext.args = '--quiet'
    }

    withName: 'SUBSAMPLEPAIREDREADS' {
        publishDir = [
            path: { "${params.outdir}/${sample}/subsampled-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'SUBSAMPLESINGLEREADS' {
        publishDir = [
            path: { "${params.outdir}/${sample}/subsampled-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'TRIMLEFT' {

        publishDir = [
            path: { "${params.outdir}/${sample}/barcode-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'TRIMRIGHT' {

        publishDir = [
            path: { "${params.outdir}/${sample}/barcode-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'SC2TRIMPRIMERSLEFT' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'SC2TRIMPRIMERSRIGHT' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

        withName: 'RSVTRIMPRIMERSLEFT' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'RSVTRIMPRIMERSRIGHT' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CUTADAPT30' {

        publishDir = [
            path: { "${params.outdir}/${sample}/adapter-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'IRMA' {

        publishDir = [
            path: { "${params.outdir}/${sample}/IRMA" },
            pattern: '*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CONFIRMIRMAOUTPUT' {
        ext.args = '--quiet'
    }

    withName: 'PASSFAILED' {
        publishDir = [
            path: { "${params.outdir}/${sample}/IRMA-negative" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CREATEDAISINPUT' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/dais-ribosome" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'DAISRIBOSOME' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/dais-ribosome" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'PREPAREIRMAJSON' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/dash-json" },
            pattern: '*.json',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'STATICHTML' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/mira-reports" },
            pattern:'*',
            mode: params.publish_dir_mode
        ]
    }

    withName: 'PARQUETMAKER' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/parquet-files" },
            pattern: '*.parq',
            mode: params.publish_dir_mode
        ]
    }

}