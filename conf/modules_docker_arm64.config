/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {
    withName: CHECKMIRAVERSION {
        ext.args = '--quiet'
        container = 'ghcr.io/cdcgov/mira-oxide:latest-aarch64'
    }

    withName: STAGES3FILES {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode
        ]
    }
    withName: CONCATFASTQS {
        publishDir = [
            path: { "${params.outdir}/fastq_pass/cat_fastqs" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: SAMPLESHEET_CHECK {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: FASTQC {
        ext.args = '--quiet'
    }

    withName: 'MULTIQC' {
        ext.args   = { params.multiqc_title ? "--title \"$params.multiqc_title\"" : '' }
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/multiqc" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'NEXTFLOWSAMPLESHEET' {
         publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            pattern: 'bad_samples.tsv',
            mode: params.publish_dir_mode,
        ]
    }

    withName: 'FINDCHEMISTRYI' {
        ext.args = '--quiet'
        container = 'ghcr.io/cdcgov/mira-oxide:latest-aarch64'
    }

    withName: 'FINDCHEMISTRYO' {
        ext.args = '--quiet'
    }

    withName: 'SUBSAMPLEPAIREDREADS' {
        publishDir = [
            path: { "${params.outdir}/${sample}/subsampled-reads" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/irma-core:latest-aarch64'
    }

    withName: 'SUBSAMPLESINGLEREADS' {
        publishDir = [
            path: { "${params.outdir}/${sample}/subsampled-reads" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/irma-core:latest-aarch64'
    }

    withName: 'TRIMBARCODES' {

        publishDir = [
            path: { "${params.outdir}/${sample}/barcode-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/irma-core:latest-aarch64'
    }

    withName: 'SC2TRIMPRIMERS' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/irma-core:latest-aarch64'
    }


    withName: 'RSVTRIMPRIMERS' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/irma-core:latest-aarch64'
    }

    withName: 'FLUTRIMPRIMERS' {

        publishDir = [
            path: { "${params.outdir}/${sample}/primer-trimmed-reads" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/irma-core:latest-aarch64'
    }

    withName: 'IRMA' {

        publishDir = [
            path: { "${params.outdir}/${sample}/IRMA" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'CONFIRMIRMAOUTPUT' {
        ext.args = '--quiet'
    }

    withName: 'PASSFAILED' {
        publishDir = [
            path: { "${params.outdir}/${sample}/IRMA-negative" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CREATEDAISINPUT' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/dais-ribosome" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'DAISRIBOSOME' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/dais-ribosome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'cdcgov/dais-ribosome:v1.6.1-arm64'
        containerOptions = '-v /tmp:/dais-ribosome/workdir -v /tmp:/dais-ribosome/lib/sswsort/workdir/'
    }

    withName: 'VARIANTSOFINT' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/csv-reports" },
            pattern: '*.csv',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/mira-oxide:latest-aarch64'
    }

    withName: 'POSITIONSOFINT' {
        publishDir = [
            path: { "${params.outdir}/aggregate_outputs/csv-reports" },
            pattern: '*.csv',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        container = 'ghcr.io/cdcgov/mira-oxide:latest-aarch64'
    }

    withName: 'PREPAREMIRAREPORTS' {
    publishDir = [
            [
                path: "${params.outdir}/aggregate_outputs/dash-json",
                pattern: '*.json',
                mode: params.publish_dir_mode,
                saveAs: { it == 'versions.yml' ? null : it }
            ],
            [
                path: "${params.outdir}/aggregate_outputs/mira-reports",
                pattern: 'mira_*.fasta',
                mode: params.publish_dir_mode,
                saveAs: { it == 'versions.yml' ? null : it }
            ],
            [
                path: "${params.outdir}/aggregate_outputs/mira-reports",
                pattern: '*.html',
                mode: params.publish_dir_mode,
                saveAs: { it == 'versions.yml' ? null : it }
            ],
            [
                path: "${params.outdir}/aggregate_outputs/csv-reports",
                pattern: '*.csv',
                mode: params.publish_dir_mode,
                saveAs: { it == 'versions.yml' ? null : it }
            ],
            [
                path: "${params.outdir}/nextclade/input_fasta_files",
                pattern: 'nextclade*.fasta',
                mode: params.publish_dir_mode
            ]
        ]

        // Only add parquet reports if params.parquet_files is truthy
        if (params.parquet_files) {
            publishDir << [
                path: "${params.outdir}/aggregate_outputs/parquet-reports",
                pattern: '*.parq',
                mode: params.publish_dir_mode
            ]
        }
    }

    withName: 'GETNEXTCLADEDATASET' {
        ext.args = '--quiet'
    }

    withName: 'RUNNEXTCLADE' {
        publishDir = [
            path: { "${params.outdir}/nextclade" },
            pattern: '*',
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'UPDATEMIRASUMMARY' {
    publishDir = [

            [
                path: "${params.outdir}/aggregate_outputs/csv-reports",
                pattern: '*.csv',
                mode: params.publish_dir_mode,
                saveAs: { it == 'versions.yml' ? null : it }
            ],
        ]

        // Only add parquet reports if params.parquet_files is truthy
        if (params.parquet_files) {
            publishDir << [
                path: "${params.outdir}/aggregate_outputs/parquet-reports",
                pattern: '*.parq',
                mode: params.publish_dir_mode
            ]
        }
    }
}
