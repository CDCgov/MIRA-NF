nextflow_pipeline {
    script "../main.nf"

    test("Flu-ONT") {
        when {
            params {
                e = "Flu-ONT"
                input = "https://raw.githubusercontent.com/CDCgov/MIRA-NF/refs/heads/fix_gh_actions/tests/test_data/samplesheet.csv"
                runpath = "https://github.com/CDCgov/MIRA-NF/tree/master/data/test_data"
                outdir = "$outputDir"
            }
        }
        then {
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            def stable_path = getAllFilesFromDir(params.outdir, ignoreFile: 'tests/.nftignore')
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    removeNextflowVersion("$params.outdir/pipeline_info/pipeline_software_versions.yml"),
                    stable_name,
                    stable_path
                ).match() }
            )
        }
    }
}