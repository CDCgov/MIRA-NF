nextflow_pipeline {
    script "../main.nf"

    test("Flu-Illumina Check") {
        when {
            params {
                e = "Flu-Illumina"
                input = "https://raw.githubusercontent.com/CDCgov/MIRA-NF/refs/heads/fix_gh_actions/tests/test_data/flu_wgs_illumina/samplesheet.csv"
                runpath = "https://github.com/CDCgov/MIRA-NF/tree/fix_gh_actions/tests/test_data/flu_wgs_illumina"
                outdir = "$outputDir"
            }
        }
        then {
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            def stable_path = getAllFilesFromDir(params.outdir, ignoreFile: 'tests/.nftignore')
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    removeNextflowVersion("$params.outdir/pipeline_info/pipeline_software_versions.yml"),
                    stable_name,
                    stable_path
                ).match() }
            )
        }
    }
